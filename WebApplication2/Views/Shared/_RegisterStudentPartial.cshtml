@model  WebApplication2.Models.StudentRegisterModel


    <div class="modal fade" id="registerStudentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <h2>Sign Up</h2>
                            <hr class="star-primary">

                            @*<form role="form">*@

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address", @class = "form-control", type = "email", id = "emailStudent" })
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div> <!-- /.form-group -->

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control", id = "usernameStudent" })
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>
                                </div>
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div> <!-- /.form-group -->

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", id = "passwordStudent" })
                                    @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                                    <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                                </div> <!-- /.input-group -->
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div> <!-- /.form-group -->

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control", id = "confirmPasswordStudent" })
                                    @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                                    <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                                </div> <!-- /.input-group -->
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div> <!-- /.form-group -->
                            @{
                                if (Request.Form.AllKeys.Contains("registerS"))
                                {
                                    <span class="help-block">
                                       @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                     </span>
                                }

                                }
                            <br/>
                            <div class="row">
                                <div class="col-xs-2"></div>
                                <div class="col-xs-4">
                                    <input type="submit" class="btn btn-success"  style="width:100px"  name="registerS" value="Sign Up" />
                                </div>
                                <div class="col-xs-3">
                                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                                </div>
                                <div class="col-xs-3"></div>
                            </div>
                                      
                                       
                        </div>
                        
                  </div>
                }

                    <section id="socialLoginForm" style="padding:15px !important">
                        @Html.Partial("~/Views/Account/_ExternalLoginsListPartial.cshtml", Model.externalLogin = new WebApplication2.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })

                    </section>
                </div>
            </div>

        </div>
    </div>
