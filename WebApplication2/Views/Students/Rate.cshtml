
@model WebApplication2.Models.Offer
<div class="modal fade" id="rateNewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h2>Rate the Tutor Service</h2>
                        <hr class="star-primary">

                        @using (Ajax.BeginForm("Rate", "Student", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "updateButtonsRate" }, new { id = "myOffer" }))
                        {
                            @Html.HiddenFor(model => model.SessionId, new { id = "HiddenText" })
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div class="input-group col-xs-12">
                                    @*<input id="Rating" value="0" type="number" class="rating" min=0 max=5 step=0.5 data-size="sm"> <br />*@
                                    @Html.TextBoxFor(m => m.Rating, new { @class = "rating", @value = "0", @min = "0", @max = "5", @step = "0.5" })
                                </div>

                            </div> <!-- /.form-group -->

                            <div class="row">
                                <div class="col-xs-2"></div>
                                <div class="col-xs-4">
                                    <input type="submit" style="width:100px" class="btn btn-success" value="Yes" />
                                </div>
                                <div class="col-xs-3">
                                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> No</button>
                                </div>
                                <div class="col-xs-3"></div>
                            </div>

                        }

                    </div>

                </div>


            </div>
        </div>

    </div>
</div>


