@model WebApplication2.Models.LoginModel



    <div class="modal fade" id="loginNewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <h2>Login</h2>
                            <hr class="star-primary">
                            @*<p>Fill the details to login to your account.</p>*@
                            @*<form role="form">*@
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username", @class = "form-control" })
                                    @*<input type="text" class="form-control" id="uLogin" placeholder="Login">*@
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>

                                </div>
                                @Html.ValidationMessageFor(m => m.UserName ,"", new { @class = "text-danger" })
                            </div> <!-- /.form-group -->
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                    @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                                    <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                                </div> <!-- /.input-group -->
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div> <!-- /.form-group -->

                                if (Request.Form.AllKeys.Contains("Login"))
                                {
                                    <span class="help-block">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                     </span>
                                }


                                        <div class="checkbox">
                                            <label>
                                                @*<input type="checkbox">*@
                                                @Html.CheckBoxFor(m => m.RememberMe) Remember me
                                            </label>
                                        </div> <!-- /.checkbox -->

                                <div class="row">
                                    <div class="col-xs-2"></div>
                                        <div class="col-xs-4">
                                            <input type="submit" style="width:100px" class="btn btn-success" name="Login" value="Login" /></div>
                                        <div class="col-xs-3">
                                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                                        </div>
                                     <div class="col-xs-3"></div>
                                    </div>
                                       

                                       
                                        }


                                        <section id="socialLoginForm" style="padding:15px !important">
                                            @Html.Partial("~/Views/Account/_ExternalLoginsListPartial.cshtml", Model.externalLogin = new WebApplication2.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })

                                        </section>

</div>
               
                    </div>


                </div>
            </div>

        </div>
    </div>


        