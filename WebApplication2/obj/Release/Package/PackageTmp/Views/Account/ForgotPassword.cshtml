@model WebApplication2.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="container fill img-rounded">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h1>@Resources.ForgotPassword</h1>
            <hr />
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <div class="alert alert-info alert-dismissable" style="display: none;" id="alerts">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-check"></i>
               @Resources.ForgotPasswordmsg
            </div>
            
            @using (Ajax.BeginForm("ForgotPassword", "Account", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "showMessage" }, new { @class = "form-horizontal" }))

           {
            @Html.AntiForgeryToken()
            <h4>@Resources.Enteremail</h4>
            
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label(Resources.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Email Link" />
                </div>
            </div>
           }
        </div>
    </div>

</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function showMessage() {
            $("#alerts").show();
        }

    </script>
}
