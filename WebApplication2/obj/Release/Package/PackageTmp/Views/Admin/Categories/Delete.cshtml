@model WebApplication2.Models.Category

@{
    ViewBag.Title = "Delete";
}


<div class="container fill img-rounded">


    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 personal-info">
            <h1>Categories - Delete </h1>
            <hr>

            <h3>Are you sure you want to delete this?</h3><br />
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>

                </dl>

              

                @using (Html.BeginForm("DeleteConfirmedCategories", "Admin", new { id = Model.CategoryID }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-success" />
                        @Html.ActionLink("Back to List", "IndexCategories", "", new { @class = "btn btn-warning" })
                    </div>
                }
            </div>

        </div>
        <div class="col-md-1"></div>
    </div>
</div>

