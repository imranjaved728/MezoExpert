@model IEnumerable<WebApplication2.DBEntities.ContactUs>

@{
    ViewBag.Title = "Index";
}

@section scripts{

    <link href="~/Theme/dataTable/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="~/Theme/dataTable/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#tutorlist').DataTable({
                "ordering": false,
                "info": false,
                "pageLength": 25,
                "bLengthChange": false,
                "scrollX": true,
                'bSortable': false
            });
        });

    </script>
}

<div class="container-fluid fill img-rounded">


    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 personal-info">
            <h1>Complaints</h1>
            <hr>
            <table class="display list finallist" cellspacing="0" width="100%" id="tutorlist">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                
                                <a href="@Url.Action("DeleteContact", "Admin", new { id = item.ContactUsID })"><i class="fa fa-trash-o"></i></a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div>
                <a class="btn btn-warning" href="@Url.Action("Index","Admin","")"><i class="fa fa-arrow-left"> Back to Home</i></a>
            </div>
        </div>


        <div class="col-md-1"></div>
    </div>
</div>

