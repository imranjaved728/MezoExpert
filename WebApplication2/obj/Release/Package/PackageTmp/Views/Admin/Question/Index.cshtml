@model IEnumerable<WebApplication2.DBEntities.Question>

@{
    ViewBag.Title = "Index";
}





@{
    ViewBag.Title = "Index";
}
@section scripts{

    <link href="~/Theme/dataTable/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="~/Theme/dataTable/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#tutorlist').DataTable({
                "ordering": false,
                "info": false,
                "pageLength": 25,
                "bLengthChange": false,
                "scrollX": true,
                'bSortable': false
            });
        });

    </script>
}

<div class="container-fluid fill img-rounded">


    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 personal-info">
            <h1>Questions</h1>
            <hr>

            <p>
                @Html.ActionLink("Create New", "CreateQuestion", "", new { @class = "btn btn-success" })
            </p>
            <table class="display list finallist" cellspacing="0" width="100%" id="tutorlist">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.student.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TutorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Details)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DueDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PostedTime)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.student.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TutorID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Details)
                            </td>
                            <td>
                                <span class="label label-warning">  @Html.DisplayFor(modelItem => item.Status)</span>
</td>
                            <td>
                                <span class="label label-success">$@Html.DisplayFor(modelItem => item.Amount)</span>
</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DueDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostedTime)
                            </td>
                            <td>
                                <a href="@Url.Action("EditQuestion", "Admin", new { id = item.QuestionID })"><i class="fa fa-pencil-square-o"></i></a>
                                |
                                <a href="@Url.Action("DeleteQuestion", "Admin", new { id = item.QuestionID })"><i class="fa fa-trash-o"></i></a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div>
                <a class="btn btn-warning" href="@Url.Action("Index","Admin","")"><i class="fa fa-arrow-left"> Back to Home</i></a>
            </div>
        </div>


        <div class="col-md-1"></div>
    </div>
</div>


