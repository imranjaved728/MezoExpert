@model IEnumerable<WebApplication2.Models.Tutor>

@{
    ViewBag.Title = "Index";
}
@section scripts{

    <link href="~/Theme/dataTable/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="~/Theme/dataTable/jquery.dataTables.min.js"></script>

    <script>
       
        $(document).ready(function () {
            $('#tutorlist').DataTable({
                "ordering": false,
                "info": false,
                "pageLength": 25,
                "bLengthChange": false,
                "scrollX": true,
                'bSortable': false
            });
        });

    </script>
}

<div class="container-fluid fill img-rounded">


    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 personal-info">
            <h1>Tutors</h1>
            <hr>
           
            <p>
                @Html.ActionLink("Create New", "CreateTutor","", new { @class="btn btn-success"})
            </p>
            <table class="display list finallist" cellspacing="0" width="100%" id="tutorlist">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        @*<th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Degree)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.University)
                        </th>
                        <th>
                    @Html.DisplayNameFor(model => model.AboutMe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Experience)
                </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentEarning)
                        </th>
                        @*<th>
                    @Html.DisplayNameFor(model => model.ProfileImage)
                </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsCompletedProfile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rating)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr align="center">
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Degree)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.University)
                            </td>
                            <td>
                        @Html.DisplayFor(modelItem => item.AboutMe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Experience)
                    </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>*@
                            <td>
                                <span class="label label-success">$@Html.DisplayFor(modelItem => item.CurrentEarning)</span>
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.ProfileImage)
                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                               @if (item.IsCompletedProfile) {
                                <span class="label label-success">Yes</span>
                               }
                               else
                               {
                                <span class="label label-danger">No</span>
                               }
                            </td>
                            <td>
                                <span class="label label-info">@Html.DisplayFor(modelItem => item.Rating)</span>
</td>
                            <td>
                              <a href="@Url.Action("EditTutor", "Admin", new { id = item.TutorID })"><i class="fa fa-pencil-square-o"></i></a>
                                |
                               <a href="@Url.Action("DeleteTutor", "Admin", new { id = item.TutorID })"><i class="fa fa-trash-o"></i></a>
                               

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div>
               <a class = "btn btn-warning" href="@Url.Action("Index","Admin","")"><i class="fa fa-arrow-left"> Back to Home</i></a> 
            </div>
        </div>

        
        <div class="col-md-1"></div>
    </div>
</div>




